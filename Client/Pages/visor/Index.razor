@page "/log"
@using UltimateProyect.Shared.Models
@inject HttpClient Http
@inject AuthenticationStateProvider Authe

<h3>Historial Completo de Pedidos (Log)</h3>

<div class="mb-3">
    <input @bind="filtroTexto" @bind:event="oninput" class="form-control" placeholder="Filtrar por petición o referencia..." />
</div>

@if (allLogs == null)
{
    <p>Cargando...</p>
}
else if (!logsFiltrados.Any())
{
    <p>No hay registros que coincidan con el filtro.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var log in logsFiltrados)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Petición #@log.Peticion</h5>
                        <small class="text-muted">@log.FechaVerificacion.ToString("g")</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Usuario: </strong><span class="badge bg-info">@log.NombreUsuario</span><br />
                            <strong>Referencia:</strong> @log.Referencia<br />
                            <strong>Palet Retirado:</strong> @log.PaletRetirada<br />
                            <strong>Palet Generado:</strong> @log.Palet<br />
                            <strong>Cantidad:</strong> <span class="badge bg-danger">@log.CantidadQuitada</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<PickingLogs>? allLogs;
    private string filtroTexto = "";

    private List<PickingLogs> logsFiltrados => string.IsNullOrWhiteSpace(filtroTexto)
        ? allLogs?.OrderByDescending(l => l.FechaVerificacion).ToList() ?? new()
        : allLogs?.Where(l =>
            (l.Peticion.ToString().Contains(filtroTexto, StringComparison.OrdinalIgnoreCase)) ||
            (l.Referencia != null && l.Referencia.Contains(filtroTexto, StringComparison.OrdinalIgnoreCase))
        ).OrderByDescending(l => l.FechaVerificacion).ToList() ?? new();

    protected override async Task OnInitializedAsync()
    {

        allLogs = await Http.GetFromJsonAsync<List<PickingLogs>>("api/icp/log");
    }


}
