@page "/refpage"
@using Microsoft.AspNetCore.Authorization
@using UltimateProyect.Shared.Models
@using UltimateProyect.Client.Services
@inject HttpClient Http
@inject RecepcionService RecepcionService
@inject IJSRuntime JSRuntime
@attribute [Authorize(Policy = "Operario")]

<h3>Referencias Disponibles</h3>
<div class="mb-3">
    <input @bind="filtroReferencia"
           class="form-control"
           placeholder="Buscar por referencia..."
           @oninput="OnFiltroChanged" />
</div>

<a href="/refpage/create" class="btn btn-success">Crear Nueva Referencia</a>

<p></p>

@if (referencias == null)
{
    <p>Cargando...</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var refe in referenciasFiltradas)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@refe.Referencia</h5>
                        <p class="card-text">
                            <strong>Descripción:</strong> @refe.DesReferencia<br />
                            <strong>Precio:</strong> @refe.Precio.ToString("C")<br />

                            <strong>¿Tiene Número de Serie?: </strong>
                            @if (refe.NSerie == true)
                            {
                                <span class="text-success" title="Sí tiene número de serie">
                                    <i class="bi bi-check-circle-fill"></i>
                                </span>
                            }
                            else
                            {
                                <span class="text-danger" title="No tiene número de serie">
                                    <i class="bi bi-x-circle-fill"></i>
                                </span>
                            }
                            <br />

                            @if (refe.NSerie == true)
                            {
                                <span><strong>Longitud:</strong> @refe.LongNSerie</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="/refpage/edit/@refe.Referencia" class="btn btn-sm btn-outline-warning w-100 mb-1">Modificar</a>
                        <button class="btn btn-sm btn-outline-danger w-100"
                                @onclick="() => EliminarReferencia(refe.Referencia)">
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (referenciasFiltradas == null || referenciasFiltradas.Length == 0)
    {
        <p class="mt-3">No se encontraron referencias que coincidan con el filtro.</p>
    }
}

@code {
    private Referencias[]? referencias;
    private string filtroReferencia = "";
    private Referencias[]? referenciasFiltradas;

    protected override async Task OnInitializedAsync()
    {

        referencias = await Http.GetFromJsonAsync<Referencias[]>("api/Referencias");
        AplicarFiltro();
    }

    private async Task EliminarReferencia(string referencia)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Eliminar la referencia {referencia}?");
        if (!confirm) return;

        await Http.DeleteAsync($"api/Referencias/{referencia}");
        referencias = await Http.GetFromJsonAsync<Referencias[]>("api/Referencias");
        AplicarFiltro();
        StateHasChanged();
    }

    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroReferencia = e.Value?.ToString() ?? "";
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (referencias == null) return;

        if (string.IsNullOrWhiteSpace(filtroReferencia))
        {
            referenciasFiltradas = referencias;
        }
        else
        {
            referenciasFiltradas = referencias
                .Where(r => r.Referencia.Contains(filtroReferencia, StringComparison.OrdinalIgnoreCase) ||
                            r.DesReferencia.Contains(filtroReferencia, StringComparison.OrdinalIgnoreCase))
                .ToArray();
        }
    }
}
