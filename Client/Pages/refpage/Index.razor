@page "/refpage"
@using Microsoft.AspNetCore.Authorization
@using UltimateProyect.Shared.Models
@using UltimateProyect.Client.Services
@inject HttpClient Http
@inject RecepcionService RecepcionService
@inject IJSRuntime JSRuntime
@attribute [Authorize(Policy = "Operario")]

<div class="container py-4">
    <h1 class="mb-4">Referencias Disponibles</h1>

    <div class="mb-3">
        <input @bind="filtroReferencia"
               class="form-control"
               placeholder="Buscar por referencia o descripción..."
               @oninput="OnFiltroChanged" />
    </div>

    <a href="/refpage/create" class="btn btn-success mb-4">
        <i class="bi bi-plus-circle me-1"></i>Crear Nueva Referencia
    </a>

    @if (referencias == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var refe in referenciasFiltradas)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-primary">@refe.Referencia</h5>
                            <ul class="list-unstyled small text-muted mt-3 mb-0">
                                <li class="mb-2">
                                    <i class="bi bi-card-text text-secondary me-2"></i>
                                    <strong>Descripción:</strong> @refe.DesReferencia
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-currency-euro text-success me-2"></i>
                                    <strong>Precio:</strong> @refe.Precio.ToString("C")
                                </li>
                                <li class="mb-2">
                                    <i class="bi @(refe.NSerie == true ? "bi-qr-code" : "bi-qr-code") text-@(refe.NSerie == true ? "success" : "danger") me-2"></i>
                                    <strong>Número de Serie:</strong>
                                    @(refe.NSerie == true ? "Sí" : "No")
                                    @if (refe.NSerie == true)
                                    {
                                        <span class="ms-2 badge bg-info">Long: @refe.LongNSerie</span>
                                    }
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-calendar-plus text-muted me-2"></i>
                                    <strong>Fecha creación:</strong> @(refe.FCreacion?.ToShortDateString() ?? "N/A")
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-grid gap-2">
                                <a href="/refpage/edit/@refe.Referencia" class="btn btn-outline-warning">
                                    <i class="bi bi-pencil-square me-1"></i>Modificar
                                </a>
                                <button class="btn btn-outline-danger"
                                        @onclick="() => EliminarReferencia(refe.Referencia)">
                                    <i class="bi bi-trash me-1"></i>Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (referenciasFiltradas?.Length == 0)
        {
            <div class="alert alert-info text-center mt-4" role="alert">
                <i class="bi bi-search me-2"></i>No se encontraron referencias que coincidan con el filtro.
            </div>
        }
    }
</div>

@code {
    private Referencias[]? referencias;
    private string filtroReferencia = "";
    private Referencias[]? referenciasFiltradas;

    protected override async Task OnInitializedAsync()
    {
        referencias = await Http.GetFromJsonAsync<Referencias[]>("api/Referencias");
        if (referencias != null)
        {
            referencias = referencias.OrderByDescending(r => r.FCreacion).ToArray();
        }
        AplicarFiltro();
    }

    private async Task EliminarReferencia(string referencia)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Eliminar la referencia {referencia}?");
        if (!confirm) return;

        await Http.DeleteAsync($"api/Referencias/{referencia}");
        referencias = await Http.GetFromJsonAsync<Referencias[]>("api/Referencias");
        AplicarFiltro();
        StateHasChanged();
    }

    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroReferencia = e.Value?.ToString() ?? "";
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (referencias == null) return;

        referenciasFiltradas = string.IsNullOrWhiteSpace(filtroReferencia)
            ? referencias
            : referencias.Where(r =>
                    r.Referencia.Contains(filtroReferencia, StringComparison.OrdinalIgnoreCase) ||
                    r.DesReferencia.Contains(filtroReferencia, StringComparison.OrdinalIgnoreCase))
                .OrderByDescending(r => r.FCreacion)
                .ToArray();
    }
}