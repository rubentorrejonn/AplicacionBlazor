@page "/icp"
@using UltimateProyect.Shared.Models
@inject HttpClient Http
@inject NavigationManager Nav

<h3>Albaranes Enviados a ICP</h3>

<div class="mb-3">
    <input @bind="filtroAlbaran"
    class="form-control"
    placeholder="Buscar por albaran..."
    @oninput="OnFiltroChanged" />
</div>

@if (albaranes == null)
{
    <p>Cargando...</p>
}
else if (!albaranes.Any())
{
    <p>No hay albaranes enviados a ICP.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Albarán</th>
                <th>Proveedor</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in AlbaranesFiltrados)
            {
                <tr>
                    <td>@a.Albaran</td>
                    <td>@a.Proveedor</td>
                    <td>@a.FCreacion.ToShortDateString()</td>
                    <td>
                        <a href="/icp/detalle?albaran=@a.Albaran" class="btn btn-sm btn-primary">
                            Detallar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private RecepcionesCab[]? albaranes;
    private string filtroAlbaran = "";
    private RecepcionesCab[]? AlbaranesFiltrados;

    protected override async Task OnInitializedAsync()
    {
        var todos = await Http.GetFromJsonAsync<RecepcionesCab[]>("api/RecepcionesCab");
        //Que desaparezca de la lista cuando esta "estado 4 confirmado"
        albaranes = todos?.Where(x => x.Estado == 3).ToArray();
        AplicarFiltro();
    }
    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroAlbaran = e.Value?.ToString() ?? "";
        AplicarFiltro();

    }
    private void AplicarFiltro()
    {
        if (albaranes == null) return;

        if (string.IsNullOrWhiteSpace(filtroAlbaran))
        {
            AlbaranesFiltrados = albaranes;
        }
        else
        {
            AlbaranesFiltrados = albaranes
                .Where(r => r.Albaran.ToString().Contains(filtroAlbaran, StringComparison.OrdinalIgnoreCase))
                .ToArray();
        }
    }
}