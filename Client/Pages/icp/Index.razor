@page "/icp/picking"
@using UltimateProyect.Shared.Models
@inject HttpClient Http
@inject NavigationManager Nav


<h3>Listado de Peticiones Pendientes de Verificación</h3>

<div class="mb-3">
    <input @bind="filtroPeticion"
           class="form-control"
           placeholder="Busca por petición..."
           @oninput="OnFiltroChanged" />
</div>

@if (salidas == null)
{
    <p>Cargando salidas disponibles...</p>
}
else if (!salidas.Any())
{
    <p>No hay salidas disponibles para verificación.</p>
}
else
{
    @* Reemplazamos la tabla por una cuadrícula de tarjetas (grid) *@
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var salida in peticionesFiltradas)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Petición #@salida.Peticion</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Cliente:</strong> @salida.NombreCliente
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="/icp/verificar/@salida.Peticion" class="btn btn-outline-primary btn-sm w-100">
                            Verificar Pedido
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private VistaOrdenSalidaCab[]? salidas;
    private string filtroPeticion = "";
    private VistaOrdenSalidaCab[]? peticionesFiltradas;

    protected override async Task OnInitializedAsync()
    {
        salidas = await Http.GetFromJsonAsync<VistaOrdenSalidaCab[]>("api/icp/salidas-disponibles");
        AplicarFiltro();
    }

    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroPeticion = e.Value?.ToString() ?? "";
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (salidas == null) return;

        if (string.IsNullOrWhiteSpace(filtroPeticion))
        {
            peticionesFiltradas = salidas;
        }
        else
        {
            peticionesFiltradas = salidas
                .Where(p => p.Peticion.ToString().Contains(filtroPeticion, StringComparison.OrdinalIgnoreCase))
                .ToArray();
        }
    }
}
