@page "/moverpalets"
@using UltimateProyect.Shared.Models
@inject HttpClient Http

<h3>Lista de Palets Disponibles para Mover</h3>

<div class="mb-3">
    <input @bind="filtroPalets"
           class="form-control"
           placeholder="Buscar por referencia o descripción..."
           @oninput="OnFiltroChanged" />
</div>

@if (palets == null)
{
    <p>Cargando...</p>
}
else if (!palets.Any())
{
    <p>No hay palets disponibles.</p>
}
else
{
    @* Reemplazamos la tabla por una cuadrícula de tarjetas (grid) *@
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var palet in paletsFiltrados)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Palet: @palet.Palet</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Referencia:</strong> @palet.Referencia<br />
                            <strong>Artículo:</strong> @palet.DesReferencia<br />
                            <strong>Cantidad:</strong> <span class="badge bg-primary">@palet.Cantidad</span><br />
                            <strong>Ubicación Actual:</strong> <span class="badge bg-success">@palet.Ubicacion</span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="/moverpalet/@palet.Palet" class="btn btn-sm btn-outline-info w-100">
                            Mover Palet
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<VistaPaletsReservados>? palets;
    private string filtroPalets = "";
    private List<VistaPaletsReservados>? paletsFiltrados;

    protected override async Task OnInitializedAsync()
    {
        palets = await Http.GetFromJsonAsync<List<VistaPaletsReservados>>("api/palets/disponibles");
        AplicarFiltro();
    }

    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroPalets = e.Value?.ToString() ?? "";
        AplicarFiltro();

    }
    private void AplicarFiltro()
    {
        if (palets == null) return;

        if (string.IsNullOrWhiteSpace(filtroPalets))
        {
            paletsFiltrados = palets;
        }
        else
        {
            paletsFiltrados = palets
                .Where(r => r.Referencia.Contains(filtroPalets, StringComparison.OrdinalIgnoreCase) ||
                r.DesReferencia.Contains(filtroPalets, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }
}
