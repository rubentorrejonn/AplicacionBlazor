@page "/salidacab"
@using UltimateProyect.Shared.Models;
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<div class="container py-4">
    <h1 class="mb-4">Salidas Cab (Pedidos)</h1>

    <!-- Barra de búsqueda y botón -->
    <div class="d-flex flex-column flex-md-row gap-3 mb-4">
        <div class="flex-grow-1">
            <input @bind="filtroPeticion"
                   class="form-control"
                   placeholder="Buscar por pedido..."
                   @oninput="OnFiltroChanged" />
        </div>
        <a href="/salidacab/create" class="btn btn-success d-flex align-items-center gap-2">
            <i class="bi bi-plus-circle"></i> Crear Nueva Salida
        </a>
    </div>

    @if (salidaCab == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (salidaCab.Length == 0)
    {
        <div class="alert alert-info text-center" role="alert">
            No hay cabeceras creadas
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var scab in peticionesFiltradas)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Pedido #@scab.Peticion</h5>
                            <span class="badge @(scab.Estado == 1 ? "bg-info" : scab.Estado == 3 ? "bg-success" : "bg-secondary")">
                                @scab.Estado - @scab.DesEstado
                            </span>
                        </div>
                        <div class="card-body">
                            <p class="card-text small text-muted">
                                <i class="bi bi-person-circle me-2 text-primary"></i>
                                <strong>Cliente:</strong> @scab.NombreCliente
                            </p>
                            <p class="card-text small text-muted">
                                <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                                <strong>Dirección:</strong> @scab.DireccionEntrega
                            </p>
                            <p class="card-text small text-muted">
                                <i class="bi bi-postcard-fill me-2 text-primary"></i>
                                <strong>CP/Población:</strong> @scab.CodigoPostal, @scab.Poblacion
                            </p>
                            <p class="card-text small text-muted">
                                <i class="bi bi-geo me-2 text-primary"></i>
                                <strong>Provincia:</strong> @scab.Provincia
                            </p>
                            <p class="card-text small text-muted">
                                <i class="bi bi-telephone-fill me-2 text-primary"></i>
                                <strong>Teléfono:</strong> @scab.Telefono
                            </p>
                            <p class="card-text small text-muted">
                                <i class="bi bi-calendar-event me-2 text-primary"></i>
                                <strong>Fecha:</strong> @scab.FCreacion.ToShortDateString()
                            </p>
                        </div>
                        <div class "card-footer bg-white">
                            @if (scab.Estado < 1)
                            {
                                <div class="d-grid gap-2">
                                    <a href="/pedidos?peticion=@scab.Peticion" class="btn btn-primary">
                                        <i class="bi bi-check-circle"></i> Hacer Pedido
                                    </a>
                                    <button class="btn btn-outline-danger" @onclick="() => EliminarPeticion(scab.Peticion)">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            }
                            @if (scab.Estado == 1)
                            {
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success" @onclick="() => AsignarStock(scab.Peticion)">
                                        <i class="bi bi-box-seam"></i> Solicitar Stock
                                    </button>
                                    <a href="/edit?peticion=@scab.Peticion" class="btn btn-warning">
                                        <i class="bi bi-pencil"></i> Editar Pedido
                                    </a>
                                    <button class="btn btn-outline-danger" @onclick="() => EliminarPeticion(scab.Peticion)">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private VistaOrdenSalidaCab[]? salidaCab;
    private string filtroPeticion = "";
    private VistaOrdenSalidaCab[]? peticionesFiltradas;

    protected override async Task OnInitializedAsync()
    {
        salidaCab = await Http.GetFromJsonAsync<VistaOrdenSalidaCab[]>("api/ordensalidacab");
        AplicarFiltro();
    }

    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroPeticion = e.Value?.ToString() ?? "";
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (salidaCab == null) return;

        peticionesFiltradas = string.IsNullOrWhiteSpace(filtroPeticion)
            ? salidaCab
            : salidaCab.Where(p => p.Peticion.ToString().Contains(filtroPeticion, StringComparison.OrdinalIgnoreCase)).ToArray();
    }

    private async Task EliminarPeticion(int peticion)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"¿Eliminar la petición {peticion}?");
        if (!confirm) return;

        await Http.DeleteAsync($"api/ordensalidacab/{peticion}");
        salidaCab = await Http.GetFromJsonAsync<VistaOrdenSalidaCab[]>("api/ordensalidacab");
        AplicarFiltro();
        StateHasChanged();
    }

    private async Task AsignarStock(int peticion)
    {
        try
        {
            var response = await Http.PostAsync($"api/RecepcionesLin/asignar-stock/{peticion}", null);
            if (response.IsSuccessStatusCode)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Stock asignado correctamente.");
                salidaCab = await Http.GetFromJsonAsync<VistaOrdenSalidaCab[]>("api/ordensalidacab");
                AplicarFiltro();
                StateHasChanged();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Error al asignar stock.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }
}