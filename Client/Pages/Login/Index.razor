@page "/login"
@using UltimateProyect.Shared.Models
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <InputText @bind-Value="loginModel.Username" placeholder="Usuario" class="form-control mb-2" />
    <InputText type="password" @bind-Value="loginModel.Password" placeholder="Contraseña" class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Entrar</button>
</EditForm>

@code {
    private LoginRequestDto loginModel = new();

    private async Task HandleLogin()
    {
        var response = await Http.PostAsJsonAsync("api/auth/login", loginModel);
        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<LoginResultDto>();
            if (result?.Success == true)
            {
                await JSRuntime.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
        }
    }
}