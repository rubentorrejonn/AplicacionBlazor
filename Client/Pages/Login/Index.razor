@page "/login"
@using UltimateProyect.Shared.Models
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<div class="d-flex justify-content-center vh-100">
    <div class="card p-4" style="width: 100%; max-width: 400px; max-height:fit-content">
        <EditForm Model="loginModel" OnValidSubmit="HandleLogin" OnInvalidSubmit="HandleInvalidLogin">
            <DataAnnotationsValidator />

            <h1 class="text-center mb-4">Iniciar Sesión</h1>

            <div class="mb-3">
                <InputText id="username"
                           @bind-Value="loginModel.Username"
                           placeholder="Usuario"
                           class="form-control" />
                <ValidationMessage For="@(() => loginModel.Username)" class="text-danger" />
            </div>

            <div class="mb-3">
                <InputText type="password"
                           id="password"
                           @bind-Value="loginModel.Password"
                           placeholder="Contraseña"
                           class="form-control" />
                <ValidationMessage For="@(() => loginModel.Password)" class="text-danger" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequestDto loginModel = new();

    private async Task HandleLogin()
    {
        var response = await Http.PostAsJsonAsync("api/auth/login", loginModel);
        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<LoginResultDto>();
            if (result?.Success == true)
            {
                await JSRuntime.InvokeVoidAsync("eval", "window.location.href = '/'");
            }
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "Error de inicio de sesión: Credenciales incorrectas.");
        }
    }

    private void HandleInvalidLogin()
    {
        Console.WriteLine("Validación fallida en el cliente.");
    }
}
